<section class="detail-container">
  <a href="/optimyang_info" class="back-btn flex-start flex-align-items-center">
    <%= image_tag "back-btn.png", class: "back-btn-image" %>
    <p>뒤로</p>
  </a>
  <h1 class="detail-section-title">Myunghee Roh</h1>
  <hr>
  <h2 class="sub-section-title">최신 출시 앱</h2>
  <article class="app-set flex-start">
    <%= image_tag "app-icon.jpg", alt: "app icon", class: "app-small-icon" %>
    <div class="app-description-width flex-space-between flex-align-items-center">
      <div class="project-app-description">
        <h1 class="project-app-title">OptimusMyang</h1>
        <p class="project-category">교육</p>
      </div>
      <button id="modal-btn1" class="download-btn">받기</button>
      
    </div>
  </article>
  
  <hr>
  <h2 class="sub-section-title">앱</h2>
  <article class="app-set flex-start">
    <%= image_tag "app-icon.jpg", alt: "app icon", class: "app-small-icon" %>
    <div class="app-description-width flex-space-between flex-align-items-center">
      <div class="project-app-description">
        <h1 class="project-app-title">OptimusMyang</h1>
        <p class="project-category">교육</p>
      </div>
      <button id="modal-btn2" class="download-btn">받기</button>
      
      <!--Download Modal-->
      <div id="download-modal" class="download-modal">
        <!--Modal Content-->
        <div class="modal-content">
          <div class="flex-space-between flex-align-items-center modal-container">
            <h3 class="modal-title">App Store</h3>
            <span class="close">확인</span>
          </div>
          <hr class="modal-hr">
          <p class="modal-container">010 6526 7935</p>
        </div>
      </div>
      
      <script>
        var modal = document.getElementById("download-modal");
        var btn1 = document.getElementById("modal-btn1");
        var btn2 = document.getElementById("modal-btn2");
        var close = document.getElementsByClassName("close")[0];
        
        btn1.onclick = function() {
          modal.style.display = "block";
        }
        
        btn2.onclick = function() {
          modal.style.display = "block";
        }
        
        close.onclick = function() {
          modal.style.display = "none";
        }
        
        window.onclick = function(event) {
          if (event.target == modal) {
            modal.style.display = "none";
          }
        }
      </script>
      
    </div>
  </article>
</section>